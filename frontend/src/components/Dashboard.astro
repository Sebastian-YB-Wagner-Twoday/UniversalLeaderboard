---
import type { Session } from "@auth/core/types";
import { Auth } from "auth-astro/components";
---

<div>
  <Auth>
    {
      (session: Session) => (
        <p class="text-2xl">
          {session
            ? `Welcome ${session.user?.name}, here are your leaderboards:`
            : "Not logged in"}
        </p>
      )
    }
  </Auth>
</div>
